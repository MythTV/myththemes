        <imagetype name="dialogboxoverlay">
            <position>0,0</position>
            <filename>images/arclight_popup_overlay.png</filename>
        </imagetype>

        <buttonlist name="list">
            <area>36,249,444,328</area>
            <wrapstyle>items</wrapstyle>
            <drawfrombottom>yes</drawfrombottom>
            <align>center</align>
            <showarrow>no</showarrow>
            <layout>vertical</layout>
            <spacing>0</spacing>
            <buttonarea>0,0,100%,100%</buttonarea>
            <statetype name="buttonitem">
                <state name="active">
                    <area>0,0,100%,54</area>
                    <imagetype name="buttonline">
                        <area>0,52,442,2</area>
                        <filename>images/arclight_popup_divider.png</filename>
                    </imagetype>
                    <textarea name="buttontext">
                        <area>5,5,434,54</area>
                        <font>basenormal</font>
                        <cutdown>yes</cutdown>
                        <align>allcenter</align>
                        <alpha>100</alpha>
                    </textarea>
                    <statetype name="buttoncheck">
                        <position>91%,10</position>
                        <state type="off">
                            <imagetype name="checkoff">
                            </imagetype>
                        </state>
                        <state type="half">
                            <imagetype name="checkhalf">
                            </imagetype>
                        </state>
                        <state type="full">
                            <imagetype name="checkfull">
                            </imagetype>
                        </state>
                    </statetype>
                    <imagetype name="buttonarrow">
                        <position>405,18</position>
                        <filename>images/arclight_popup_rightarrow.png</filename>
                        <alpha>100</alpha>
                    </imagetype>
                </state>
                <state name="selectedactive" from="active">
                    <textarea name="buttontext">
                        <alpha>255</alpha>
                    </textarea>
                    <imagetype name="buttonarrow">
                        <alpha>255</alpha>
                    </imagetype>
                </state>
                <state name="selectedinactive" from="active">
                    <imagetype name="buttonbackground">
                        <alpha>100</alpha>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="upscrollarrow">
                <position>395,326</position>
                <state type="off">
                    <imagetype name="upoff">
                        <filename>images/arclight_popup_uparrow.png</filename>
                        <alpha>60</alpha>
                    </imagetype>
                </state>
                <state type="full">
                    <imagetype name="upon">
                        <filename>images/arclight_popup_uparrow.png</filename>
                        <alpha>190</alpha>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="downscrollarrow">
                <position>412,326</position>
                <state type="off">
                    <imagetype name="dnoff">
                        <filename>images/arclight_popup_downarrow.png</filename>
                        <alpha>60</alpha>
                    </imagetype>
                </state>
                <state type="full">
                    <imagetype name="dnon">
                        <filename>images/arclight_popup_downarrow.png</filename>
                        <alpha>190</alpha>
                    </imagetype>
                </state>
            </statetype>
        </buttonlist>

